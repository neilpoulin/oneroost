{
"parser": "babel-eslint",
"parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
    },
    {
    "settings": {
        "react": {
            "pragma": "React",  // Pragma to use, default to "React"
            "version": "15.0" // React version, default to the latest React stable release
        }
    }
    },
    "env": {"browser": true, "node": true},
    "plugins": [
    "react"
    ],
    "settings": {
        "react": {
            "pragma": "React",  // Pragma to use, default to "React"
            "version": "15.0" // React version, default to the latest React stable release
        }
        },
        "globals": {
            "OneRoost": true,

            },
            "rules": {
                "strict": [2, "never"],
                "react/jsx-uses-react": 2,
                "react/jsx-uses-vars": 2,
                "react/react-in-jsx-scope": 2,
                "quotes": [1,"double"],
                "no-debugger": 1,
                "no-empty": 1,
                "no-dupe-args": 1,
                "no-dupe-keys": 1,
                "no-extra-parens": 1,
                "no-extra-semi": 1,
                "no-irregular-whitespace": 1,
                "no-unreachable": 1,
                "valid-typeof": 2,
                "use-isnan": 2,
                "block-scoped-var": 1,
                "consistent-return": 0,
                "no-magic-numbers": 0,
                "no-multi-spaces": 1,
                "no-unused-vars": [1, {"vars": "local", "args": "none", "varsIgnorePattern": "Bootstrap"}],
                "no-mixed-requires": 1,
                "no-use-before-define": [1, {"functions": false, "classes": true}],
                "no-undef": 2
            }
        }
