{{#if existed}}
    {{#if completedDate}}
        {{{formatUserName modifiedBy}}} at {{{modifiedBy.company}}} has completed a next step
    {{else}}
        {{{formatUserName modifiedBy}}} at {{{modifiedBy.company}}} has updated a next step
    {{/if}}
{{else if assignedUserName}}
    {{{formatUserName modifiedBy}}} at {{{modifiedBy.company}}} has assigned a next step to {{{assignedUserName}}}
{{else}}
    {{{formatUserName modifiedBy}}} at {{{modifiedBy.company}}} has created a next step
{{/if}}
